footer 
    background-color $oscuro
    color $blanco
    padding 3rem
    font-family $fuente-principal
.contenedor-footer
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
    gap 2rem
    margin-bottom 2rem
.columna
    display flex
    flex-direction column
    gap 1rem
#logo
    font-size 3rem
    font-weight 700
    margin-bottom: 1rem
.sociales
    display flex
    
    gap 1rem
a img
    width 30px
    height 30px
    transition transform .3s
    border-radius: 50%
    &:hover
        transform scale(1.1)
.columna h3 h4
    font-size: 1.3rem
    font-family: Arial, Helvetica, sans-serif
    margin-bottom: .5rem
    color $blanco
ul
    list-style none
    padding 0
    margin 0
li
    list-style none
    margin-bottom .3rem
a
    color $blanco
    text-decoration none
    font-size .95rem
    &:hover
        color $primario
.newsletter
    form
        display flex
        flex-direction column
        gap 1.1rem
    input
        padding .7rem
        border none
        border-radius .7rem
        outline none
    button
        background-color $primario
        border none
        color $oscuro
        font-weight 500
        padding .8rem
        border-radius .5rem
        cursor: pointer
        transition: background .4s
        &:hover
            background darken($primario , 20%)
.derechos
    
    text-align center
    border-top 1px solid rgba(255,255,255,0.1)
    padding: 1rem
    font-size: 1.4rem
    margin-bottom: 1rem
    font-style: oblique
    color: goldenrod
    background-color: white
    span
        color: #f0c93d
        font-weight: 600

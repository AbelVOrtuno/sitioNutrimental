.blog
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    gap 2rem
    padding 4rem 3rem
article
    background $blanco
    border-radius 1rem
    overflow hidden
    box-shadow 0 2px 8px rgba(0,0,0,0.1)
    display flex
    flex-direction: column
img
    width 100%
    height 220px
    object-fit cover
.article-content
    padding 1.5rem
    display flex
    flex-direction column
    gap: 1rem
    flex 1
article h3
    font-size 1.5rem
    font-weight 600
.btn-leer
    background $primario
    color $blanco
    padding 1rem
    align-self start
    border-radius .5rem
    font-size .9rem
    transition background .3s
.btn-leer:hover
    background darken($primario, 20%)
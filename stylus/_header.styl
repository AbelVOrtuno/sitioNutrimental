// Estilos a la cabecera //
.navegacion
    display: flex
    flex-direction: column
    align-items: center
    padding: 1rem
    gap 1rem
    width 100%
.logo
    font-size 3rem
    font-weight bold
.menu
    display flex
    flex-direction column
    align-items center
    gap 2rem
.reservar
    display flex
    flex-direction: column
    align-items: center
    gap: .5rem
svg
    cursor pointer
.btn-reservar
    background: $primario
    font-size: 1.4rem
    font-family: Arial, Helvetica, sans-serif
    font-style: oblique
    padding: .5rem 1.5rem
    border-radius: 1rem
    cursor pointer
    transition: background 0.3s 
    &:hover
        background: darken($oscuro, 10%)
.menu-select
    background: $gris
    color: $blanco
    border none
    border-radius: 1rem
    padding: 0.5rem 1rem
    font-size: 1rem
    cursor pointer
    transition: border 0.3s, background 0.3s
    &:hover
        background: #222
        border-color: #0ff
@media (min-width 768px) 
    .navegacion
        display: flex
        flex-direction: row
        align-items: center
        justify-content: space-between
        padding: 1rem 2rem
    .menu
        flex-direction row
        justify-content center
        flex 1
        gap: 2rem
        text-align: center
    .logo
        flex: 1
        text-align left
    .reservar
        flex: 1
        justify-content center
        flex-direction row
        gap 1rem

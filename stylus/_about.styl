// Estilos para nuestra pagina sobre nosotros //

// Seccion del Hero //
.hero-about
    display: grid
    grid-template-columns 1fr
    align-items: center
    gap: 2rem
    padding: 5rem 1rem
@media (min-width 768px) 
    .hero-about
        grid-template-columns: repeat(2, 1fr)
        gap: 1.3rem
        align-items: center

.contenedor
    background: rgb(10, 63, 10)
.texto
    animation: aparecer 1s ease-in-out
    h2
        font-size: 2.5rem
        color: $blanco
#objetivo
    text-align: center
    font-size 1.3rem
    margin 1rem 0
    color: $blanco
.btn
    margin 1rem
    background $primario
    color $blanco
    font-size: 1rem
    padding: .8rem 1.6rem 
    border-radius: 2rem
    border none
    transition: transform .3s ease
    &:hover
        cursor pointer
        transform: scale(1.05)
.imagen img
    width 100%
    border-radius 2rem
    animation slideIn 1.2s ease-out
// animaciones para elementos del banner //

@keyframes aparecer 
    from
        opacity 0
        transform translateY(30px)
    to
        opacity 1
        transform translateY(0)
@keyframes slideIn 
    from
        opacity 0
        transform translateX(70px)
    to
    opacity 2
        transform translateX(0)

// cita //
.cita
    text-align: center
@media (min-width 768px) 
    .cita
        text-align: center

// estadisticas //
.estadisticas
    display: grid
    grid-template-columns 1fr
    text-align: center
    gap 1rem
    margin 3rem 0
h2
    text-align center
    padding-top 2rem
    color: $blanco
@media (min-width 768px) 
    .estadisticas
        grid-template-columns: repeat(4, 1fr)
        gap: 1.3rem
.centro
    background-color: $primario
.dato
    max-width: 75%
    width 75%
    margin: 0 auto
    color: $blanco
    padding: 1.5rem
    border-radius 1rem
    transition all .3s
    &:hover
        transform scale(1.05)
        background: $gris
.nucleo
    display: grid
    grid-template-columns 1fr
    gap: 2rem
    align-items: center
    margin 5rem 1rem
@media (min-width 768px) 
    .nucleo
        grid-template-columns: repeat(2, 1fr)
        gap .8rem
        align-items: center
#nutriologa
    height 570px
    margin-bottom: 1rem
.texto
    color: $blanco
#nucleo
    text-align: center
    font-size: 2rem
ol
    margin-top 1rem
li
    margin-bottom .5rem

// libro de cocina //
.libro
    display grid
    grid-template-columns 1fr
    gap 2rem
    align-items center
    margin 4rem 1rem
@media (min-width 768px) 
    .libro
        grid-template-columns: repeat(2, 1fr)
        gap 2rem

.info
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

// seccion pasos //
.pasos
    position relative
    background url('../img/verduras.jpg')
    min-height 80vh
    top 5
    bottom 5
    background-color $blanco
    display flex
    flex-direction column
    align-items: center
    justify-content: center
    color: black
    &_overlay
        background rgba(255,255,255,0.9)
        padding 3rem 2rem
        border-radius 2rem
        max-width 600px
        width 90%
        box-shadow 0 4px 2rem rgba(0,0,0,0.2)
        animation fadeInUp 1.2s ease both
    #pasos
        font-size 2rem
        margin-bottom 1rem
        line-height 1.3
    .pasos__content
        background: $blanco
        padding: 3rem
        border-radius: 2rem
        text-align: center
    p
        margin-bottom 0.5rem
        font-size 1.1rem
    .pasos__form
        display flex
        justify-content center
        margin-top 2rem
        input
            padding: 0.8rem
            border: solid $gris 1px
            border-radius 2rem 0 0 2rem
            flex 1
@keyframes fadeInUp
    from
        opacity 0
        transform translateY(6rem)
    to
        opacity 1
        transform translateY(0)
// Preguntas frecuentes //
.faq
    margin: 5rem 0
    padding: 2rem
    background-color: rgb(10, 63, 10)
#faq
    font-size: 1.3rem
    margin-bottom 2rem
.faq-item
    margin-bottom 1rem
    .faq-pregunta
        width 100%
        text-align left
        padding 1rem
        border none
        background: forestgreen
        color $blanco
        border-radius: 2rem
        border none
        cursor pointer
    .faq-respuesta
        max-height: 0
        overflow hidden
        transition: max-height .4s ease, padding .4s
        border-radius 1rem
    .faq-respuesta p
        padding: 1rem
// Animacion global de la pagina //
body
    animation fadeIn .6s ease-in-out
@keyframes fadeIn 
    from
        opacity 0
    to
        opacity 1
// formulario final //
.formulario
    background $blanco
    color: $oscuro
    padding: 3rem 2rem
    border-radius 2rem
    display flex
    flex-direction column
    gap 1rem
    align-items center
    justify-content center
    animation: fadeInUp 1.2s ease both
    input, textarea
        border none
        border-bottom 2px solid $gris
        padding 1rem
        outline none
        transition border-color 0.3s ease
        &:focus
            border-color $primario